<h1> Create a Game </h1>
<%=form_for(@game) do |f|%>
    <div class="form-group">
        <%= f.label :Name %><br>
        <%= f.text_field :name, class: "form-control" %></div>
    <div class="form-group">
        <%= f.label :Developer %><br>
        <%= f.text_field :developer, class: "form-control" %></div>
    <div class="form-group">
        <%= f.label :Release_Year %><br>
        <%= f.number_field :release_year, class: "form-control" %></div>
    <div class="form-group">
        <%= f.label :Description %><br>
        <%= f.text_field :description, class: "form-control" %></div>
    <div class="form-group">
        <%= f.label :Genre %><br>
        <%= f.text_field :genre, class: "form-control" %></div>
        <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
        </div>
<% end %>