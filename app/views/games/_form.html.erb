<%=form_for(@game) do |f|%>
    <% if @game.errors.any? %>
    <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        <% end %>
    <div class="form-group">
        <%= f.label :Name %><br>
        <%= f.text_field :name, class: "form-control" %></div>
    <div class="form-group">
        <%= f.label :Developer %><br>
        <%= f.text_field :developer, class: "form-control" %></div>
    <div class="form-group">
        <%= f.label :Release_Year %><br>
        <%= f.number_field :release_year, class: "form-control" %></div>
    <div class="form-group">
        <%= f.label :Genre%><br>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control" %></div>
    <div class="form-group">
        <%= f.label :Description %><br>
        <%= f.text_area :description, class: "form-control" %></div>
    <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
        </div>
<% end %>